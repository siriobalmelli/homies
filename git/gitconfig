[advice]
    pushNonFastForward = false  # quieter git output

[alias]
	a = add

	# files added with 'git add' are unlocked by default
	ad = annex drop
	ag = annex get
	ah = annex sync --jobs=cpus --content  # functional substitute for "push to all"
	ap = annex sync --jobs=cpus  # 'p' is "pull" for consistency with 'git p'
	as = annex status
	aw = annex whereis

	b = branch
	bd = branch -d
	c = commit
	camp = "!f() { git commit -am \"$@\" && git push && git log HEAD^1...HEAD; }; f"
	co = checkout
	d = diff
	dc = diff --cached
	f = fetch
	h = push
	hf = push --force
	ht = push --tags
	i = init
	ib = init --bare
	l = log
	lp = log -p
	m = merge
	p = pull
	r = rebase
	re = remote
	rs = reset
	rsh = reset --hard
	s = status
	t = tag
	x = rm
	xc = rm --cached

	initgit = !git init && echo ".DS_Store" >>.gitignore && sort -uo .gitignore .gitignore
	initannex = !git initgit && git update-index --index-version 4 && git annex init && git annex wanted . present

	preengit = !git fsck --full && git reflog expire --expire=now --all && git gc --prune=now --aggressive
	preenannex = !git annex fix && git annex fsck --all && git annex unused && git annex drop --unused && git preengit

	graph = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	infograph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

	purge = !bfg --no-blob-protection --delete-files

[annex]
	version = 7
	thin = true
	numcopies = 2
	largefiles = largerthan=100kb and not mimetype=text/*

[commit]
	gpgsign = true

[gcrypt]
	publish-participants = true

[push]
	default = simple

[tag]
	gpgSign = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[user]
	name = Sirio Balmelli
	email = sirio@b-ad.ch
	signingkey = F72C4A887F9A24CA
