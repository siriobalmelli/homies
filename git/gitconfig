[alias]
	a = add

	# files added with 'git add' are unlocked by default
	ad = annex drop
	af= !git annex fix; git annex fsck --all; git annex unused; git annex drop --unused
	ag = annex get
	ah = annex sync --jobs=cpus --content  # functional substitute for "push to all"
	as = annex status
	aw = annex whereis
	ay = annex sync --jobs=cpus

	b = branch
	c = commit
	cam = commit -am
	camx = !git commit -am "$1" && git push && exit 0 ; echo
	co = checkout
	d = diff
	dc = diff --cached
	f = fetch
	h = push
	ht = push --tags
	i = init
	ib = init --bare
	l = log
	lp = log -p
	m = merge
	p = pull
	r = rebase
	re = remote
	rs = reset
	rsh = reset --hard
	s = status
	t = tag
	x = rm
	xc = rm --cached

	graph = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	housekeep = !git reflog expire --expire=now --all && git gc --prune=now --aggressive
	infograph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	purge = !bfg --no-blob-protection --delete-files

[annex]
	version = 7
	thin = true
	numcopies = 2
	largefiles = not mimetype=text/*

[commit]
	gpgsign = true

[gcrypt]
	publish-participants = true

[push]
	default = simple

[url "git@github.com:"]
	insteadOf = https://github.com/

[user]
	name = Sirio Balmelli
	email = sirio@b-ad.ch
	signingkey = F72C4A887F9A24CA
